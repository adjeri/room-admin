<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>DashboardFilter</filter-name>
        <filter-class>kic.admin.CourseFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CategorieFilter</filter-name>
        <filter-class>kic.admin.CategorieFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CourseFilter</filter-name>
        <filter-class>kic.admin.CourseFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DashboardFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/room.form</url-pattern>
        <url-pattern>/room.save</url-pattern>
        <url-pattern>/room.delete</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CategorieFilter</filter-name>
        <url-pattern>/categorie</url-pattern>
        <url-pattern>/categorie.form</url-pattern>
        <url-pattern>/categorie.save</url-pattern>
        <url-pattern>/course.form</url-pattern>
        <url-pattern>/course.save</url-pattern>
        <url-pattern>/course</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CourseFilter</filter-name>
        <url-pattern>/course.form</url-pattern>
        <url-pattern>/course.save</url-pattern>
        <url-pattern>/course</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Dispatcher</servlet-name>
        <servlet-class>kic.admin.Dispatcher</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/login.form</url-pattern>
        <url-pattern>/room.delete</url-pattern>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/room.save</url-pattern>
        <url-pattern>/room.form</url-pattern>
        <url-pattern>/login.action</url-pattern>
        <url-pattern>/categorie</url-pattern>
        <url-pattern>/categorie.save</url-pattern>
        <url-pattern>/categorie.form</url-pattern>
        <url-pattern>/course.form</url-pattern>
        <url-pattern>/course.save</url-pattern>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
